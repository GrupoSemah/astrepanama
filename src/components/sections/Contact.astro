---
// Importaciones necesarias

interface Props {
  title?: string;
}

const { title = "Contacto" } = Astro.props;

// Opciones para el dropdown de ingreso familiar
const ingresoOptions = [
  "Menos de $1,000",
  "$1,000 - $2,000",
  "$2,001 - $3,000",
  "$3,001 - $5,000",
  "Más de $5,000",
];

import instagram from "../icons/svg/instagram.svg";
---

<footer id="contacto" class="w-full left-0 right-0 bottom-0 bg-[#222222] text-white mt-0 mb-0">
  <div class="container mx-auto px-6 py-12 pb-0 lg:py-16 lg:pb-0">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-8 lg:gap-12">
      <!-- Logo y datos de contacto (columna izquierda en desktop) -->
      <div class="md:col-span-4 flex flex-col items-center md:items-start">
        <!-- Logo -->
        <div class="mb-6">
          <img src="/icons/svg/logoastre.svg" alt="Astre Logo" class="h-16" />
        </div>

        <!-- Información de contacto (visible solo en desktop) -->
        <div class="hidden md:block text-white/80 space-y-3 mt-6">
          <p>Calle Principal #123</p>
          <p>Ciudad de Panamá</p>
          <p>info@astre.com</p>
          <p>+507 123-4567</p>
        </div>
      </div>

      <!-- Formulario (columna derecha en desktop) -->
      <div class="md:col-span-8">
        <!-- Texto explicativo -->
        <div class="text-center md:text-left mb-8">
          <h2
            class="text-2xl md:text-3xl font-bold"
            style="font-family: var(--font-heading);"
          >
            Bríndanos tus datos para contactarte y enviarte información
            detallada del proyecto
          </h2>
        </div>

        <!-- Formulario -->
        <form id="contact-form" class="flex flex-col gap-5 mb-8">
          <!-- Grid para campos de formulario en desktop -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <!-- Nombre y Apellido -->
            <div class="form-group">
              <input
                type="text"
                name="nombre"
                id="nombre"
                placeholder="Nombre y Apellido"
                class="w-full bg-transparent border border-white/50 rounded-full px-6 py-4 text-white placeholder:text-white/70 focus:outline-none focus:border-white"
                required
              />
            </div>

            <!-- Número de teléfono -->
            <div class="form-group">
              <input
                type="tel"
                name="telefono"
                id="telefono"
                placeholder="Número de teléfono"
                class="w-full bg-transparent border border-white/50 rounded-full px-6 py-4 text-white placeholder:text-white/70 focus:outline-none focus:border-white"
                required
              />
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
            <!-- Correo Electrónico -->
            <div class="form-group">
              <input
                type="email"
                name="email"
                id="email"
                placeholder="Correo Electrónico"
                class="w-full bg-transparent border border-white/50 rounded-full px-6 py-4 text-white placeholder:text-white/70 focus:outline-none focus:border-white"
                required
              />
            </div>

            <!-- Ingreso Familiar (Dropdown) -->
            <div class="form-group relative">
              <select
                name="ingreso"
                id="ingreso"
                class="w-full bg-transparent border border-white/50 rounded-full px-6 py-4 text-white appearance-none focus:outline-none focus:border-white cursor-pointer"
                required
              >
                <option value="" disabled selected class="bg-[#222222]"
                  >Ingreso Familiar</option
                >
                {
                  ingresoOptions.map((option) => (
                    <option value={option} class="bg-[#222222]">
                      {option}
                    </option>
                  ))
                }
              </select>
              <!-- Flecha personalizada para el dropdown -->
              <div
                class="absolute right-6 top-1/2 transform -translate-y-1/2 pointer-events-none"
              >
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 16 16"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M4 6L8 10L12 6"
                    stroke="white"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"></path>
                </svg>
              </div>
            </div>
          </div>

          <!-- Botón Enviar centrado en desktop -->
          <div class="flex flex-col items-center mt-6">
            <button
              type="submit"
              class="w-full md:w-auto bg-white text-black rounded-full py-4 px-10 font-medium flex items-center justify-center gap-3 hover:bg-gray-200 transition-colors"
            >
              <span class="text-lg">enviar</span>
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M7 17L17 7M17 7H7M17 7V17"
                  stroke="black"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </button>
            
            <!-- Instagram (debajo del botón) -->
            <div class="flex justify-center mt-6 cursor-pointer">
              <a
                href="https://instagram.com/astre"
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-2 hover:opacity-80 transition-opacity"
              >
                <img src="/icons/svg/instagram.svg" alt="Instagram" width="28" height="28" />
              </a>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Línea divisoria -->
    <div class="border-t border-white/20 my-8"></div>

    <!-- Footer legal (centrado en móvil, justificado en desktop) -->
    <div
      class="flex flex-col md:flex-row justify-between items-center text-sm text-white/60 mb-0"
    >
      <!-- Enlaces legales -->
      <div class="flex gap-4 mb-4 md:mb-0">
        <a href="/terminos" class="hover:text-white transition-colors"
          >Términos legales</a
        >
        <a href="/privacidad" class="hover:text-white transition-colors"
          >Política de Privacidad</a
        >
      </div>

      <!-- Copyright -->
      <div>© 2025 Astre. Todos los derechos reservados.</div>
    </div>
  </div>
</footer>

