---
import Layout from '@/layouts/Layout.astro';
import Navbar from '@/components/ui/Navbar.astro';
---

<Layout title="¡Gracias! | Astre Panamá">
  <Navbar />
  
  <!-- Fondo con la estructura de Astre -->
  <div class="min-h-screen bg-primary text-white flex items-center justify-center px-4 pt-20">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Logo -->
      <div class="mb-12">
        <img src="/icons/svg/logoastre.svg" alt="Astre Logo" class="h-24 md:h-32 mx-auto mb-8" />
      </div>

      <!-- Mensaje principal con la estructura de Astre -->
      <div class="bg-white/5 backdrop-blur-sm rounded-3xl p-8 md:p-16 shadow-2xl border border-white/10">
        <div class="mb-8">
          <!-- Icono de éxito con colores de Astre -->
          <div class="w-20 h-20 mx-auto mb-6 bg-green-500 rounded-full flex items-center justify-center">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          
          <h1 class="text-4xl md:text-6xl font-bold mb-6" style="font-family: var(--font-heading); font-weight: var(--font-heading-weight);">
            ¡Gracias por tu interés!
          </h1>
          
          <p class="text-xl md:text-3xl text-white/90 mb-8" style="font-family: var(--font-body); font-weight: var(--font-body-weight);">
            Hemos recibido tu información correctamente
          </p>
        </div>

        <div class="space-y-6 text-white/90 mb-12">
          <p class="text-lg md:text-xl" style="font-family: var(--font-body); font-weight: var(--font-body-weight);">
            Nuestro equipo se pondrá en contacto contigo muy pronto para brindarte toda la información detallada sobre <strong>Astre Panamá</strong>.
          </p>
          
          <p class="text-base md:text-lg opacity-80" style="font-family: var(--font-body); font-weight: var(--font-body-weight);">
            Mientras tanto, puedes contactarnos directamente:
          </p>
          
          <!-- Botones de contacto con el estilo de Astre -->
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mt-8">
            <a href="tel:+50763307851" 
               class="flex items-center gap-3 bg-white/10 hover:bg-white/20 border border-white/20 hover:border-white/40 px-8 py-4 rounded-full transition-all duration-300 transform hover:scale-105 text-white">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <span class="text-lg font-medium">+507 6330-7851</span>
            </a>
            
            <a href="https://wa.me/50763307851" 
               target="_blank" 
               rel="noopener noreferrer"
               class="flex items-center gap-3 bg-green-500 hover:bg-green-600 px-8 py-4 rounded-full transition-all duration-300 transform hover:scale-105 text-white shadow-lg">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              <span class="text-lg font-medium">WhatsApp</span>
            </a>
          </div>
        </div>

        <!-- Contador y redirección con estilo de Astre -->
        <div class="border-t border-white/20 pt-8">
          <p class="text-base md:text-lg text-white/70 mb-4" style="font-family: var(--font-body); font-weight: var(--font-body-weight);">
            Serás redirigido automáticamente en <span id="countdown" class="text-white font-bold text-xl">5</span> segundos...
          </p>
          <button id="redirect-now" class="text-white/90 hover:text-white underline text-base transition-colors hover:scale-105 transform duration-200">
            O haz clic aquí para regresar ahora
          </button>
        </div>
      </div>

      <!-- Información adicional -->
      <div class="mt-12 text-white/60 text-sm">
        <p>Céntrico, cómodo y estratégico. Vive en el corazón de San Francisco, Panamá.</p>
      </div>
    </div>
  </div>

  <script>
    // Función para redirigir a astrepanama.com
    function redirectToHome() {
      const homeUrl = 'https://astrepanama.com';
      
      // Si estamos en un iframe, intentamos redirigir la ventana padre
      if (window.parent && window.parent !== window) {
        try {
          window.parent.location.href = homeUrl;
        } catch (e) {
          // Si no podemos acceder al padre, redirigimos la ventana actual
          window.location.href = homeUrl;
        }
      } else {
        // Redirección normal a astrepanama.com
        window.location.href = homeUrl;
      }
    }

    // Contador de redirección automática
    let countdown = 5;
    const countdownElement = document.getElementById('countdown');
    const redirectButton = document.getElementById('redirect-now');

    const timer = setInterval(() => {
      countdown--;
      if (countdownElement) {
        countdownElement.textContent = countdown.toString();
      }
      
      if (countdown <= 0) {
        clearInterval(timer);
        redirectToHome();
      }
    }, 1000);

    // Botón para redirección inmediata
    if (redirectButton) {
      redirectButton.addEventListener('click', () => {
        clearInterval(timer);
        redirectToHome();
      });
    }

    // Detectar si venimos de Pipedrive y manejar la redirección del iframe
    if (document.referrer.includes('pipedrive.com') || window.location.search.includes('from=pipedrive')) {
      // Intentar comunicarse con la ventana padre para salir del iframe
      try {
        if (window.parent && window.parent !== window) {
          window.parent.postMessage({
            type: 'PIPEDRIVE_FORM_SUCCESS',
            action: 'redirect',
            url: 'https://astrepanama.com'
          }, '*');
        }
      } catch (e) {
        console.log('No se pudo comunicar con la ventana padre, usando redirección normal');
      }
    }
  </script>
</Layout>
